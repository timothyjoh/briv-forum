<div class="row push-down">
  <div class="col-sm-10 col-sm-offset-1 hid">
      <div class="well">

        <%= form_for(Comment.new(post: @post), url: post_comments_path(post_id: @post.id), html: { method: :post }) do |f| %>
          <fieldset>
            <legend>Leave a comment</legend>

            <%= f.hidden_field :post_id %>

            <div class="form-group">
                <%= f.hidden_field :picture_cache %>
                <%= f.label :picture, class: 'control-label' %>
                <%= f.file_field :picture, class: 'form-control' %>
            </div>

            <hr />

            <div class="form-group">
                <%= f.label :body, 'Comment', class: 'control-label' %>
                <%= f.text_area :body, rows: 5, class: 'form-control' %>
            </div>

            <div class="form-group">
              <div class="text-right">
                <button type="reset" class="btn btn-default">Reset</button>
                <button type="submit" class="btn btn-primary">Post comment</button>
              </div>
            </div>
          </fieldset>
        <% end %>

      </div>

  </div>
</div>