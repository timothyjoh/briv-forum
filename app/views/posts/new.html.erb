<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Create a new post</h1>
    </div>
  </div>
</div>

<div class="row push-down">
  <div class="col-sm-10 col-sm-offset-1 hid">
      <div class="well">

        <%= form_for(@post, url: posts_path, html: { method: :post }) do |f| %>
          <fieldset>

            <div class="form-group">
                <%= f.label :title, class: 'control-label' %>
                <%= f.text_field :title, autofocus: true, class: 'form-control input-lg' %>
            </div>


            <div class="form-group">
                <%= f.hidden_field :picture_cache %>
                <%= f.label :picture, class: 'control-label' %>
                <%= f.file_field :picture, class: 'form-control' %>
            </div>

            <%= image_tag(@post.picture_url, :width => 64, :height => 64, class: 'edit') if @post.picture_url %>

            <hr />

            <div class="form-group">
                <%= f.label :body, class: 'control-label' %>
                <%= f.text_area :body, rows: 15, class: 'form-control' %>
            </div>

            <div class="form-group">
              <div class="text-right">
                <button type="reset" class="btn btn-default">Reset</button>
                <button type="submit" class="btn btn-primary">Submit changes</button>
              </div>
            </div>
          </fieldset>
        <% end %>

      </div>

  </div>
</div>
